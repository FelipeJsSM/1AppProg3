@*Strong type view*@
@model ProductListViewModel
@{
    ViewData["Title"] = "Market index";
}

@if (!string.IsNullOrWhiteSpace(ViewBag.message))
{
    <div class="alert @ViewBag.MessageType alert-dismissible fade show" role="alert">
        @ViewBag.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <h1 class="text-center">Product list</h1>
</div>

<div class="row">
    <div class="col-12 col-md-4">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h5 class="text-center">Fruits</h5>
            </div>
            <div class="card-body">

                @if (Model.Fruits.Count == 0)
                {
                    <h3>There are no fruits</h3>
                }
                else
                {
                    <table class="table table-bordered">

                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Fruits)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }

            </div>

        </div>
    </div>
    <div class="col-12 col-md-4">
        <div class="card">
            <div class="card-header bg-success text-light">
                <h5 class="text-center">Vegetables</h5>
            </div>
            <div class="card-body">
                @if (Model.Vegetables.Count == 0)
                {
                    <h3>There are no vegetables</h3>
                }
                else
                {
                    <table class="table table-bordered">

                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Vegetables)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>

        </div>
    </div>
    <div class="col-12 col-md-4">
        <div class="card">
            <div class="card-header bg-warning text-light">
                <h5 class="text-center">Dairy products</h5>
            </div>
            <div class="card-body">
                @if (Model.DairyProducts.Count == 0)
                {
                    <h3>There are no dairy products</h3>
                }
                else
                {
                    <table class="table table-bordered">

                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DairyProducts)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>

        </div>
    </div>
</div>


@section Styles {
    <link rel="stylesheet" href="~/css/Market/market_index.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/Market/market_index.js" asp-append-version="true"></script>
}